#version 450

layout(local_size_x = 1) in;

layout(set = 0, binding = 0) readonly buffer InputData
{
    float value[];
} input_data;

layout(set = 0, binding = 1) buffer OutputData
{
    float value[];
} output_data;

void main()
{
    float tmp = input_data.value[gl_GlobalInvocationID.x];
    output_data.value[gl_GlobalInvocationID.x] = tmp * tmp;
}